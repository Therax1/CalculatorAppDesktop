<Window x:Class="Calculatrice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculatrice"
        mc:Ignorable="d"
        Title="MainWindow" Height="370" Width="407" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="display" HorizontalAlignment="Center" Height="52" Margin="0,20,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="375" Background="#FFFFE600" Foreground="#FFFF4100" BorderBrush="Black" TextAlignment="Right" IsReadOnly="True" FontSize="36" FontWeight="Bold" FontFamily="Bahnschrift" TextChanged="display_TextChanged"/>
        <Button Content="+/-" HorizontalAlignment="Left" Height="52" Margin="16,274,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16"/>
        <Button Content="0" HorizontalAlignment="Left" Height="52" Margin="86,274,0,0" VerticalAlignment="Top" Width="65" Click="Button_Click_1" FontWeight="Bold" FontSize="16"/>
        <Button Content="." HorizontalAlignment="Left" Height="52" Margin="156,274,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16"/>
        <Button Content="=" HorizontalAlignment="Left" Height="52" Margin="256,274,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16"/>
        <Button Content="%" HorizontalAlignment="Left" Height="52" Margin="326,274,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16" Click="Button_Click_4"/>
        <Button Content="1" HorizontalAlignment="Left" Height="52" Margin="16,217,0,0" VerticalAlignment="Top" Width="65" Click="Button_Click_2" FontWeight="Bold" FontSize="16"/>
        <Button Content="2" HorizontalAlignment="Left" Height="52" Margin="86,217,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16"/>
        <Button Content="3" HorizontalAlignment="Left" Height="52" Margin="156,217,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16"/>
        <Button Content="4" HorizontalAlignment="Left" Height="52" Margin="16,160,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16"/>
        <Button Content="5" HorizontalAlignment="Left" Height="52" Margin="86,160,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16"/>
        <Button Content="6" HorizontalAlignment="Left" Height="52" Margin="156,160,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16"/>
        <Button Content="7" HorizontalAlignment="Left" Height="52" Margin="16,103,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16"/>
        <Button Content="8" HorizontalAlignment="Left" Height="52" Margin="86,103,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16"/>
        <Button Content="9" HorizontalAlignment="Left" Height="52" Margin="156,103,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16"/>
        <Button Content="+" HorizontalAlignment="Left" Height="52" Margin="256,217,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16"/>
        <Button Content="-" HorizontalAlignment="Left" Height="52" Margin="326,217,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16" Click="Button_Click_3"/>
        <Button Content="/" HorizontalAlignment="Left" Height="52" Margin="256,160,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16"/>
        <Button Content="%" HorizontalAlignment="Left" Height="52" Margin="326,160,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16"/>
        <Button Content="CE" HorizontalAlignment="Left" Height="52" Margin="256,103,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16"/>
        <Button Content="C" HorizontalAlignment="Left" Height="52" Margin="326,103,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold" FontSize="16"/>
    </Grid>
</Window>
